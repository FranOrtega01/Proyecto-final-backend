<div>
    <div class="card">
        <div class="card-body">
            <div class="card-header">
                <h3>Nuevo Producto</h3>
            </div>
            <div class="card-body">
                <form action="/api/products" method="POST" enctype="multipart/form-data">
                    <div class="form-group my-2">
                        <input type="text" name="title" class="form-control" placeholder="Nombre Producto" autofocus />
                    </div>
                    <div class="form-group my-2">
                        <input type="text" name="description" class="form-control" placeholder="Descripcion"></input>
                    </div>
                    <div class="form-group my-2">
                        <input type="text" name="code" class="form-control" placeholder="Codigo"></input>
                    </div>
                    <div class="form-group my-2">
                        <input type="number" name="stock" class="form-control" placeholder="Stock"></input>
                    </div>
                    <div class="form-group my-2">
                        <input type="text" name="category" class="form-control" placeholder="Categoria"></input>
                    </div>
                    <div class="form-group my-2">
                        <input type="number" name="price" class="form-control" placeholder="Precio"></input>
                    </div>
                    <div>
                        <input type="hidden" class="form-control" name="type_document" value="product"></input>
                    </div>
                    <div class="form-group my-2">
                        <h5>Imágenes: </h5><input type="file" name="images" class="form-control" placeholder="Imágenes"
                            multiple></input>
                    </div>
                    <div class="form-group my-2">
                        <button class="btn btn-primary btn-block" type="submit">
                            Save
                        </button>
                    </div>
                    <div class="form-group my-2">
                        <a class="btn btn-dark" href="/session/profile">Volver a mi perfil</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>